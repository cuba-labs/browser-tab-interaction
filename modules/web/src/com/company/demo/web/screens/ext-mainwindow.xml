<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.demo.web.screens.ExtAppMainWindow"
        extends="/com/haulmont/cuba/web/app/mainwindow/mainwindow.xml"
        messagesPack="com.company.demo.web.screens"
        xmlns:main="http://schemas.haulmont.com/cuba/mainwindow.xsd">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="foldersSplit">
            <main:workArea id="workArea">
                <main:initialLayout>
                    <groupBox id="dashboardControlsBox"
                              caption="Dashboard"
                              expand="spacer"
                              height="100%"
                              spacing="true">
                        <button id="openDashboardBtn"
                                caption="Open Dashboard"/>
                        <textField id="dashboardTextField"
                                   caption="Dashboard Text - Type text here, Press Enter"
                                   width="300px"/>
                        <label id="spacer"/>
                    </groupBox>
                </main:initialLayout>
            </main:workArea>
        </split>
    </layout>
</window>